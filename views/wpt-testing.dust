<html>
<head>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script type="text/javascript" src="/javascripts/wpt-testing.js"></script>
<link href="/stylesheets/wpt-testing.css" type="text/css" rel="stylesheet">
</head>
<body>
    <div class="page">
        <div id="main">
            <form>
                Test Url: <input type="text" name="test_url" size="100" value="https://www.yahoo.com/"></input><br>
                Runs: <select type="select"  name="runs" class="select1-10" value="Repeat the test"></select><br>
                <input type="button" name="execute" onclick="executeTest()" value="Execute Test"></input>
            </form>
            <hr>
            <div class="result">
            {>"wpt-testing-partial/info" /}
            {>"wpt-testing-partial/table" /}
            </div>
        </div>
    </div>
</body>
</html>
<script>

 
function initialize() {
    var select1_10 = "";
    for (i = 1; i <= 10; i++){
        select1_10 += "<option value=" + i + ">" + i + "</option>"
    }
    $('.select1-10').html(select1_10);
}

function executeTest() {
    var config = {};
    config.testurl = document.getElementsByName('test_url')[0].value;
    config.runs = document.getElementsByName('runs')[0].value;
    document.getElementsByName('execute')[0].disabled = true;
    var test = new wpt(config);
    test.sendRunRequest();
    document.selectexecute
}

function endTest(result) {
    document.getElementsByName('execute')[0].disabled = false;
    writeTestResult(result);
}

function writeTestResult(result) {
    $('.result').html(result);
}

function testDisplayIncomplete() {
    var config = {'testurl': '.', 'runs': 1},
        test = new wpt(config);
    getExampleIncompleteResponse(function(json){
        test.dispatchRunResponse(json); 
        test.dispatchResultResponse(json); 
        test.finish();
    })
}

function testDisplayResult() {
    var config = {'testurl': '.', 'runs': 1},
        test = new wpt(config);
    getExampleResultResponse(function(json){
        test.dispatchRunResponse(json); 
        test.dispatchResultResponse(json); 
        test.finish();
    })
}

initialize();


</script>